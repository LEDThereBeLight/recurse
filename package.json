{
  "name": "recurse-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "next dev",
    "build": "next build && yarn postbuild",
    "postbuild": "yarn run sitemap && yarn run rss",
    "sitemap": "cross-env NODE_OPTIONS='--experimental-json-modules' yarn node ./scripts/generate-sitemap.mjs",
    "rss": "cross-env NODE_OPTIONS='--experimental-json-modules' yarn node ./scripts/generate-rss.mjs",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir components --dir lib --dir layouts --dir scripts",
    "postinstall": "husky install",
    "prepack": "husky install"
  },
  "dependencies": {
    "@fontsource/inter": "^4.5.15",
    "@mailchimp/mailchimp_marketing": "^3.0.80",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/unist": "^2.0.6",
    "autoprefixer": "^10.4.14",
    "contentlayer": "^0.3.0",
    "esbuild": "^0.17.11",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "image-size": "^1.0.2",
    "js-yaml": "^4.1.0",
    "mdast": "^3.0.0",
    "mdast-util-to-string": "^3.1.1",
    "mdx-bundler": "^9.2.1",
    "next": "^12.0.0",
    "next-contentlayer": "^0.3.0",
    "next-seo": "^5.15.0",
    "next-themes": "^0.2.1",
    "postcss": "^8.4.21",
    "preact": "^10.13.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-citation": "^1.0.1",
    "rehype-preset-minify": "^6.0.0",
    "rehype-prism-plus": "^1.5.1",
    "rehype-slug": "^5.1.0",
    "remark": "^14.0.2",
    "remark-footnotes": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "sharp": "^0.31.3",
    "styled-components": "^5.3.8",
    "tailwindcss": "^3.2.7",
    "unist": "^8.0.11",
    "unist-util-visit": "^4.1.2",
    "vfile": "^5.3.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.2.4",
    "@svgr/webpack": "^6.5.1",
    "@types/js-yaml": "^4",
    "@types/mdast": "^3",
    "@types/node": "18.15.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/tailwindcss": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "cross-env": "^7.0.3",
    "dedent": "^0.7.0",
    "eslint": "^8.35.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "file-loader": "^6.2.0",
    "globby": "^13.1.3",
    "husky": "^8.0.3",
    "inquirer": "^9.1.4",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.4.1"
}
